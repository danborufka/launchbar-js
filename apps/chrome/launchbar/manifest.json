{
  "manifest_version": 2,

  "name":           "Launchbar",
  "description":    "Quicklaunchbar to execute custom JS on websites",
  "version":        "1.0.0",
  "author":         "Dan Borufka", 

  "options_ui":
  {
    "page":         "options.html",
    "chrome_style": true
  },

  "background":     
  {
    "scripts": ["data/background.js"],
    "persistent": false
  },

  "browser_action": 
  {
    "default_icon":     "data/icon.png",
    "default_popup":    "options_popup.html"
  },

  "permissions": 
  [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage"
  ]
}