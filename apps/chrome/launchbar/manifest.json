{
  "manifest_version": 2,

  "name":           "Launchbar",
  "description":    "Quicklaunchbar to execute custom JS on websites",
  "version":        "1.0.0",
  "author":         "Dan Borufka", 

  "options_ui":
  {
    "page":         "options.html",
    "chrome_style": true
  },

  "background":     
  {
    "scripts": ["data/background.js"],
    "persistent": false
  },

  "browser_action": 
  {
    "default_icon":
    {
      "16": "data/icon-16.png",
      "32": "data/icon-32.png",
      "64": "data/icon-64.png"
    },
    "default_popup":    "options_popup.html"
  },

  "icons":
  {
    "16": "data/icon-16.png",
    "32": "data/icon-32.png",
    "64": "data/icon-64.png"
  },

  "permissions": 
  [
    "activeTab",
    "https://ajax.googleapis.com/",
    "storage",
    "http://*/",
    "https://*/"
  ],
  "web_accessible_resources": 
  [
    "inject.js",
    "background.js"
  ]
}