{
  "manifest_version": 2,

  "name":           "Launchbar",
  "description":    "Quicklaunchbar to execute custom JS on websites",
  "version":        "1.0.0",
  "author":         "Dan Borufka", 

  "options_page":   "options.html",

  "background":     
  {
    "scripts": ["inject.js"],
    "persistent": false
  },

  "browser_action": 
  {
    "default_icon":     "icon.png",
    "default_popup":    "options_popup.html"
  },
  "permissions": 
  [
    "activeTab",
    "https://ajax.googleapis.com/"
  ]
}